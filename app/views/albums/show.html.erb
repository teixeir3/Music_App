<h1><%= @album.title %></h1>
<h2>Album details</h2>
<body>
  <table>
    <% @album.attributes.each do |attr, val| %>
     <tr><th><%= "#{attr}"%></th><td><%="#{val}" %></td></tr>
    <%  end %>
  </table>

  <br><br>
  <p> <%= link_to "Add track", new_album_track_url(@album) %> </p>
  <br>
  <ul>
    <% @album.tracks.each do |track| %>
      <p> <%= link_to "#{track.title}", track_url(track) %></p>
    <% end %>
  </ul>

  <br>
  <p> <%= button_to "Delete Album", album_url(@album), method: :delete%>

  <p> <%= link_to "Edit Album", edit_album_url(@album) %> </p>

  <p> <%= link_to "Album Index", band_albums_url(@album) %> </p>


</body>